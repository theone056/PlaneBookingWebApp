@{
}
@model AirportUpsertDTO
<input type="hidden" asp-for="Id"/>
<div class="container-fluid">
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-nowrap">@Html.DisplayNameFor(x => x.Name):</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-nowrap">@Html.DisplayNameFor(x => x.Address)</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Address, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
        </div>
    </div>
</div>