@{
}
@model AirportIndexViewModel

<div class="container-fluid mt-5">
    <div class="card">
        <div class="card-body">
            <h1>Airport List</h1>
            <div class="alert alert-success" id="success-alert" style="display:none">
                <strong>Success! </strong>
            </div>
            <div class="alert alert-danger" id="danger-alert" style="display:none">
                <strong>Error! </strong>
            </div>
            <button class="btn btn-primary" onclick="Airport.AddUpdateModal()">Add New</button>
            <div id="airport-table-container">
                <partial name="_AirportTable" model="@Model.Airports" />
            </div>
        </div>
    </div>
</div>


<div id="airport-modal-container">
    <partial name="_AirportAddUpdateModal"/>
</div>



@section Scripts{
    <script src="~/js/Airport/AirportIndex.js"></script>
}