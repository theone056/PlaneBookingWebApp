@{
}
@model PlaneUpsertDTO
<input type="hidden" asp-for="Id"/>
<div class="container-fluid">
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-nowrap">@Html.DisplayNameFor(x => x.Code):</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Code, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Code, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-nowrap">@Html.DisplayNameFor(x => x.Airline)</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Airline, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Airline, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-md-3 col-form-label text-nowrap">@Html.DisplayNameFor(x => x.Model)</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.Model, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Model, "", new { @class = "text-danger" })
        </div>
    </div>
</div>