<form method="post"
      enctype="multipart/form-data"
      asp-controller="_Plane"
      asp-action="AddUpdatePlane"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-mode="replace"
      data-ajax-update="#plane-table-container"
      data-ajax-success="Plane.OnSuccess"
      data-ajax-failure="Plane.OnFailure"
      id="plane-form">
    <div class="modal fade" id="plane-modal" tabindex="-1" aria-labelledby="planeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="planeModalLabel">Add Plane</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="plane-modal-body">
                    <partial name="_PlaneAddUpdateModalContent" model="new PlaneUpsertDTO()" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>