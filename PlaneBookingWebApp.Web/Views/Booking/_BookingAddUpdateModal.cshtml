<form method="post"
      enctype="multipart/form-data"
      asp-controller="_Booking"
      asp-action="AddUpdateBooking"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-mode="replace"
      data-ajax-update="#booking-table-container"
      data-ajax-success="Booking.OnSuccess"
      data-ajax-failure="Booking.OnFailure"
      id="booking-form">
    <div class="modal fade" id="booking-modal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="bookingModalLabel">Add Airport</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="booking-modal-body">
                    <partial name="_BookingAddUpdateModalContent" model="new BookingUpsertDTO()" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>