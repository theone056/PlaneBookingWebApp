<form method="post"
      enctype="multipart/form-data"
      asp-controller="_Flight"
      asp-action="AddUpdateFlight"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-mode="replace"
      data-ajax-update="#flight-table-container"
      data-ajax-success="Flight.OnSuccess"
      data-ajax-failure="Flight.OnFailure"
      id="flight-form">
    <div class="modal fade" id="flight-modal" tabindex="-1" aria-labelledby="flightModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="flightModalLabel">Add Flight</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="flight-modal-body">
                    <partial name="_FlightAddUpdateModalContent" model="new FlightUpsertDTO()" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>